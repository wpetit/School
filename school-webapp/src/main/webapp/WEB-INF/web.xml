<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_5.dtd" >

<web-app>
	<display-name>School Web Application</display-name>

	<!-- Servlets -->
	<servlet>
		<servlet-name>authenticationServlet</servlet-name>
		<servlet-class>fr.min.school.webapp.server.AuthenticationServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>authenticationServlet</servlet-name>
		<url-pattern>/authentication</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
