<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:DecoratorPanel>
		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER"
			verticalAlignment="ALIGN_MIDDLE" width="254px" height="96px">
			<g:Cell horizontalAlignment="ALIGN_RIGHT">
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE"
					horizontalAlignment="ALIGN_LEFT">
					<g:Label text="Login :" />
					<g:TextBox ui:field="loginTextBox"/>
				</g:HorizontalPanel>
			</g:Cell>
			<g:Cell horizontalAlignment="ALIGN_RIGHT">
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE"
					horizontalAlignment="ALIGN_RIGHT">
					<g:Label text="Password :" />
					<g:PasswordTextBox ui:field="passwordTextBox"/>
				</g:HorizontalPanel>
			</g:Cell>
			<g:Button ui:field="button">Connexion</g:Button>
			<g:InlineLabel ui:field="informationsLabel"/>
		</g:VerticalPanel>
	</g:DecoratorPanel>
	<!-- Add GWT widgets here. Enter < and hit Ctrl-Space to auto-complete widget 
		names. The ui:field attribute binds an element to a field in the owner class. 
		See the GWT docs on UI Binder for more details. -->
</ui:UiBinder> 